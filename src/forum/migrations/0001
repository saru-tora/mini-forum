anansi::operations! {
    migrations::CreateRecord {
        prefix: "forum",
        name: "topic",
        fields: vec![
            (
                "id",
                records::BigInt::field().primary_key()
            ),
            (
                "title",
                records::VarChar::<200>::field()
            ),
            (
                "user",
                records::BigInt::field().foreign_key("auth", "user", "id")
            ),
            (
                "content",
                records::VarChar::<40000>::field()
            ),
            (
                "date",
                records::DateTime::field()
            ),
        ],
    },
    migrations::CreateRecord {
        prefix: "forum",
        name: "topictuple",
        fields: vec![
            (
                "id",
                records::BigInt::field().primary_key()
            ),
            (
                "subject_namespace",
                records::Text::field()
            ),
            (
                "subject_key",
                records::BigInt::field()
            ),
            (
                "subject_predicate",
                records::Text::field().null()
            ),
            (
                "object_key",
                records::BigInt::field()
            ),
            (
                "object_predicate",
                records::Text::field()
            ),
        ],
    },
    migrations::CreateRecord {
        prefix: "forum",
        name: "comment",
        fields: vec![
            (
                "id",
                records::BigInt::field().primary_key()
            ),
            (
                "topic",
                records::BigInt::field().foreign_key("forum", "topic", "id")
            ),
            (
                "user",
                records::BigInt::field().foreign_key("auth", "user", "id")
            ),
            (
                "content",
                records::VarChar::<40000>::field()
            ),
            (
                "date",
                records::DateTime::field()
            ),
        ],
    },
    migrations::CreateRecord {
        prefix: "forum",
        name: "commenttuple",
        fields: vec![
            (
                "id",
                records::BigInt::field().primary_key()
            ),
            (
                "subject_namespace",
                records::Text::field()
            ),
            (
                "subject_key",
                records::BigInt::field()
            ),
            (
                "subject_predicate",
                records::Text::field().null()
            ),
            (
                "object_key",
                records::BigInt::field()
            ),
            (
                "object_predicate",
                records::Text::field()
            ),
        ],
    },
}